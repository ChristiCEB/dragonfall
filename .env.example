# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dragonfall"

# Base URL (for OAuth redirects and links). Used as redirect_uri base for Roblox OAuth.
APP_BASE_URL="https://dragonfall.online"
# Optional fallbacks
# BASE_URL="https://dragonfall.online"
# NEXTAUTH_URL="https://dragonfall.online"

# Roblox OAuth 2.0 + OpenID Connect (create app at create.roblox.com)
# @see https://create.roblox.com/docs/cloud/auth/oauth2-reference
ROBLOX_OAUTH_CLIENT_ID=""
ROBLOX_OAUTH_CLIENT_SECRET=""
# Optional: OIDC issuer (default: https://apis.roblox.com/oauth/)
# ROBLOX_OIDC_ISSUER="https://apis.roblox.com/oauth/"

# Roblox private key for postback auth (server-only; never exposed to client).
# Game servers send ?key=... on postback requests. Use a long random string.
ROBLOX_PRIVATE_KEY=""
# Legacy name (optional; ROBLOX_PRIVATE_KEY takes precedence)
# POSTBACK_KEY=""

# Admin: allowlist = superadmins (only they can toggle user role). Comma-separated Roblox user IDs.
ADMIN_ROBLOX_USER_IDS="12345678,87654321"
# Admin: optional group; members with rank >= min are admins (cached 5 min). On group API failure, only allowlist counts.
ROBLOX_ADMIN_GROUP_ID=""
ROBLOX_ADMIN_MIN_RANK="1"
# Legacy (optional): same as ADMIN_ROBLOX_USER_IDS
# ROBLOX_ADMIN_USER_IDS="12345678,87654321"

# Discord webhook for important events (optional)
DISCORD_WEBHOOK_URL=""

# NextAuth secret (generate: openssl rand -base64 32)
NEXTAUTH_SECRET=""

# Rate limiting: Upstash Redis (optional; uses in-memory when unset)
# Create at https://console.upstash.com/
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
